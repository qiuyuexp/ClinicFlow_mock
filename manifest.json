{
  "manifest_version": 3,
  "name": "ClinicFlow",
  "version": "1.0.0",
  "description": "Next Generation Clinic AI Agent",
  "permissions": [
    "debugger",
    "sidePanel",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "action": {
    "default_title": "ClinicFlow"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "mocks/*.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}